<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.MusicBrowser</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" >@color/dark</item>
        <item name="android:navigationBarColor">@color/dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="windowSplashScreenAnimatedIcon">@mipmap/adaptive_launcher_round</item>

    </style>
</resources>